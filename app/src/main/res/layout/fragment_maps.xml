<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white_base"
        android:paddingHorizontal="10dp">
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/auto_complete_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"/>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/result_section"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/elevation_temp"
            android:elevation="10dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/white_base"
            app:layout_constraintBottom_toTopOf="@id/card_result"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/elevation"
                    android:layout_margin="5dp"
                    android:text="@string/dummy_value_int"
                    android:fontFamily="@font/semibold"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:layout_marginHorizontal="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/temp"
                    android:layout_margin="5dp"
                    android:text="@string/dummy_value_int"
                    android:fontFamily="@font/semibold"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:id="@+id/card_result"
            android:elevation="10dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="-20dp"
            app:cardBackgroundColor="@color/white_base"
            android:layout_gravity="bottom">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/item_title"
                        android:layout_marginTop="10dp"
                        android:text="@string/identifier_title"
                        android:fontFamily="@font/semibold"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_centerHorizontal="true"/>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="1"
                        android:id="@+id/soil_table"
                        android:layout_below="@id/item_title"
                        android:layout_centerHorizontal="true"
                        android:layout_marginHorizontal="20dp">

                        <TableRow>

                            <TextView
                                android:layout_width="100dp"
                                android:fontFamily="@font/medium"
                                android:text="@string/ph"
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/ph_value"
                                android:text="@string/dummy_value_int"
                                android:fontFamily="@font/medium"
                                android:gravity="end"
                                android:textSize="12sp"
                                android:textColor="@color/black"/>
                        </TableRow>

                        <TableRow>
                            <TextView
                                android:text="@string/natrium"
                                android:fontFamily="@font/medium"
                                android:textSize="12sp"
                                android:textColor="@color/black"/>
                            <TextView
                                android:id="@+id/natrium_value"
                                android:text="@string/dummy_value_int"
                                android:fontFamily="@font/medium"
                                android:gravity="end"
                                android:textSize="12sp"
                                android:textColor="@color/black"/>
                        </TableRow>

                        <TableRow>
                            <TextView
                                android:text="@string/fosfor"
                                android:fontFamily="@font/medium"
                                android:textSize="12sp"
                                android:textColor="@color/black"/>
                            <TextView
                                android:id="@+id/fosfat_value"
                                android:text="@string/dummy_value_int"
                                android:fontFamily="@font/medium"
                                android:gravity="end"
                                android:textSize="12sp"
                                android:textColor="@color/black"/>
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:layout_width="107dp"
                                android:fontFamily="@font/medium"
                                android:text="@string/kalium"
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                            <TextView
                                android:id="@+id/kalium_value"
                                android:text="@string/dummy_value_int"
                                android:fontFamily="@font/medium"
                                android:gravity="end"
                                android:textSize="12sp"
                                android:textColor="@color/black"/>
                        </TableRow>

                        <TableRow>
                            <TextView
                                android:text="@string/bahan_organik2"
                                android:fontFamily="@font/medium"
                                android:textSize="12sp"
                                android:textColor="@color/black"/>
                            <TextView
                                android:id="@+id/bo_value"
                                android:text="@string/dummy_value_int"
                                android:fontFamily="@font/medium"
                                android:gravity="end"
                                android:textSize="12sp"
                                android:textColor="@color/black"/>
                        </TableRow>

                        <TableRow>
                            <TextView
                                android:text="@string/tekstur_tanah2"
                                android:fontFamily="@font/medium"
                                android:textSize="12sp"
                                android:textColor="@color/black"/>
                            <TextView
                                android:id="@+id/tt_value"
                                android:text="@string/dummy_value_int"
                                android:fontFamily="@font/medium"
                                android:gravity="end"
                                android:textSize="12sp"
                                android:textColor="@color/black"/>
                        </TableRow>

                        <TableRow>
                            <TextView
                                android:text="@string/skl"
                                android:fontFamily="@font/medium"
                                android:textSize="12sp"
                                android:textColor="@color/black"/>
                            <TextView
                                android:id="@+id/skl_value"
                                android:text="@string/dummy_value_int"
                                android:fontFamily="@font/medium"
                                android:gravity="end"
                                android:textSize="12sp"
                                android:textColor="@color/black"/>
                        </TableRow>

                        <TableRow>
                            <TextView
                                android:text="@string/air"
                                android:fontFamily="@font/medium"
                                android:textSize="12sp"
                                android:textColor="@color/black"/>
                            <TextView
                                android:id="@+id/air_value"
                                android:text="@string/dummy_value_int"
                                android:fontFamily="@font/medium"
                                android:gravity="end"
                                android:textSize="12sp"
                                android:textColor="@color/black"/>
                        </TableRow>
                    </TableLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/item_title_plant"
                        android:layout_marginTop="10dp"
                        android:text="@string/item_title_plant"
                        android:fontFamily="@font/semibold"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_below="@id/soil_table"
                        android:layout_centerHorizontal="true"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_search"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        tools:listitem="@layout/item_plant"
                        android:elevation="10dp"
                        android:layout_below="@id/item_title_plant"
                        android:layout_marginBottom="20dp"
                        android:paddingHorizontal="10dp"/>
                </RelativeLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/fab_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/detail_item"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/bold"
            android:contentDescription="@string/dummy"
            app:layout_constraintBottom_toTopOf="@id/card_result"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@color/white_base"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
