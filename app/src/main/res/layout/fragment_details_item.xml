                    android:text="@string/skl_details"
                    android:padding="10dp"
                    android:visibility="gone"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_temp"
            android:layout_width="match_parent"
